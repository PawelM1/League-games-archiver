<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" minWidth="650.0" prefHeight="466.0" prefWidth="1000.0"
           xmlns="http://javafx.com/javafx/11.0.1" fx:controller="app.Controller.SeasonOperationController">
    <VBox alignment="TOP_CENTER" nodeOrientation="LEFT_TO_RIGHT">
        <GridPane hgap="30.0" prefHeight="400.0" prefWidth="214.0">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="%SeasonOperation.text1">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Text>
            <Button fx:id="editSeasonButton" mnemonicParsing="false" onAction="#editSeason"
                    style="-fx-background-color: #6699ff; -fx-font-weight: bold;"
                    text="%SeasonOperation.Button2" GridPane.columnIndex="4" GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <effect>
                    <DropShadow color="#447cff"/>
                </effect>
            </Button>
            <Button fx:id="addNewSeasonButton" mnemonicParsing="false" onAction="#addNewSeasonToDB"
                    style="-fx-background-color: #008042; -fx-font-weight: bold;"
                    text="%SeasonOperation.Button1" GridPane.columnIndex="4">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <effect>
                    <DropShadow color="#518c03"/>
                </effect>
            </Button>
            <ComboBox fx:id="seasonToEditCombobox" prefWidth="150.0" promptText="%SeasonOperation.combobox1"
                      GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="%SeasonOperation.text3"
                  GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Text>
            <ComboBox fx:id="seasonToDelete" prefWidth="150.0" promptText="%SeasonOperation.combobox2"
                      GridPane.columnIndex="1" GridPane.rowIndex="2"/>
            <Button fx:id="deleteSeasonButton" mnemonicParsing="false" onAction="#deleteSeason"
                    style="-fx-background-color: #ff6666; -fx-font-weight: bold;"
                    text="%SeasonOperation.Button3" GridPane.columnIndex="4" GridPane.rowIndex="2">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <effect>
                    <DropShadow color="#ff5555"/>
                </effect>
            </Button>
            <Text fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="%SeasonOperation.text2"
                  GridPane.rowIndex="1">
                <font>
                    <Font name="System Bold" size="14.0"/>
                </font>
            </Text>
            <DatePicker fx:id="newSeasonStartDate" editable="false" promptText="%SeasonOperation.datepicker1"
                        GridPane.columnIndex="1"/>
            <DatePicker fx:id="newSeasonEndDate" editable="false" promptText="%SeasonOperation.datepicker2"
                        GridPane.columnIndex="2"/>
            <DatePicker fx:id="editSeasonStartDate" editable="false" promptText="%SeasonOperation.datepicker3"
                        GridPane.columnIndex="2" GridPane.rowIndex="1"/>
            <DatePicker fx:id="editSeasonEndDate" editable="false" promptText="%SeasonOperation.datepicker4"
                        GridPane.columnIndex="3" GridPane.rowIndex="1"/>
        </GridPane>
        <HBox alignment="CENTER" spacing="40.0">
            <padding>
                <Insets bottom="20.0" top="20.0"/>
            </padding>
            <Button contentDisplay="TOP" mnemonicParsing="false" onAction="#closeDialog"
                    style="-fx-background-color: #cc0000; -fx-font-weight: bold;"
                    text="%SeasonOperation.Button4">
                <font>
                    <Font name="System Bold" size="12.0"/>
                </font>
                <cursor>
                    <Cursor fx:constant="HAND"/>
                </cursor>
                <effect>
                    <DropShadow color="#9f1414"/>
                </effect>
            </Button>
        </HBox>
    </VBox>
</StackPane>
